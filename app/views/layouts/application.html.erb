<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="border-bottom border-dark">
        <nav class="navbar">
          <div class="container">

            <h1>LOGO</h1>

            <% if customer_signed_in? %>

              ようこそ、<%= current_customer.last_name %>さん！

              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "マイページ", public_customer_path(current_customer.id), class: 'text-dark' %>
              </button>

              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "商品一覧", public_items_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "カート", public_cart_items_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'text-dark' %>
              </button>
            <% elsif admin_signed_in? %>
              <button class="btn btn-outline-secondary" type="button">
    　           <%= link_to "商品一覧", admin_items_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "会員一覧", admin_customers_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                注文履歴一覧
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'text-dark' %>
              </button>
            <% else %>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "About", public_homes_about_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "商品一覧", admin_items_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "新規登録", new_customer_registration_path, class: 'text-dark' %>
              </button>
              <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ログイン", new_customer_session_path, class: 'text-dark' %>
              </button>
            <% end %>
          </div>
        </nav>
      </div>
    </header>


    <%= yield %>
  </body>
</html>
