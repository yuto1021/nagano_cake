<h3>商品一覧</h3>
<p>（全<%= @items.count %>件）</p>
<table class="col-md-8 offset-md-1">
  <thead>
    <tr>
      <th>商品画像</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to public_item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 50, 30, format: 'jpg' %>
          <% end %>
        </td>
        <td><%= item.name %></td>
        <td>¥<%= item.with_tax_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>