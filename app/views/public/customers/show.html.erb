マイページ</br>

<div class="col-8 ml-4">
  登録情報
  <%= link_to "編集する", edit_public_customer_path(@customer), class: "btn btn-success" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </thead>
  </table>
  配送先
  <%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary" %>
</div>







