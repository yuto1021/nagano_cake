<div class="container">
  <div calss="row">
    <div class="col-sm-8 col-sm-offset-2 form">
      
      <h3>ジャンル一覧・追加</h3>
      <div class="container">
        <div class="row">
          <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>

            <div class="form-group">
              <div class="col-lg-4">
                <label for="genre_name">ジャンル名</label>
              </div>
              <div class="col-lg-4">
                <%= f.text_field :name, placeholder: "ジャンル名" %>
              </div>
            </div>

            <div class="col-lg-4">
              <%= f.submit '新規登録', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>



      <h3>ジャンル</h3>
      <table class="table table-hover table-inverse">
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
