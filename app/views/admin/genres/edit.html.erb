<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 form">

      <h3>ジャンル編集</h3>

      <%= form_with model: @genre, url:admin_genre_path, local:true do |f| %>

        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
        </div>

        <div class="actions">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>

      <% end %>

    </div>
  </div>
</div>
