<div class="container">
  <form class="form-horizontal">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h3>商品新規登録</h3>

      <%= form_with model: @item, url:new_admin_item_path, local:true do |f| %>

        <div class="form-group">
          <label for="item_image">商品画像</label>
          <%= f.attachment_field :image %>
        </div>

        <div class="form-group">
          <label class="control-label col-xs-2">商品名</label>
          <div class="col-xs-5">
            <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label for="item_introduction">商品説明</label>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="genre_name">ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name %>
        </div>

        <div class="from-group">
          <label for="item_price">税抜価格</label>
          <%= f.text_field :price, placeholder: "1000" %>円
        </div>
        
        <div class="from-group">
          <label for="item_is_active">販売ステータス</label>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :true, style: "display: inline-block;"} %>
        </div>
        
        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>

      <% end %>


    </div>
  </form>
</div>