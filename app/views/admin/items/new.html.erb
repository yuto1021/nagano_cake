<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h3>商品新規登録</h3>

      <%= form_with model: @item, url:admin_items_path, method: :post, local:true do |f| %>

        <div class="form-group row">
          <label for="item_image" class="col-sm-4 col-form-label" >商品画像</label>
          <div class="col-sm-8">
            <%= f.attachment_field :image %>
          </div>
        </div>

        <div class="form-group row">
          <label for="item_name" class="col-sm-4 col-form-label">商品名</label>
          <div class="col-sm-8">
            <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="item_introduction" class="col-sm-4 col-form-label">商品説明</label>
          <div class="col-sm-8">
            <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="genre_name" class="col-sm-4 col-form-label">ジャンル</label>
          <div class="col-sm-8">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--", class: "form-control" %>
          </div>
        </div>

        <div class="from-group row">
          <label for="item_price" class="col-sm-4 col-form-label">税抜価格</label>
          <div class="col-sm-8">
            <%= f.text_field :price, placeholder: "1000", class: "form-control" %>円
          </div>
        </div>

        <div class="from-group row">
          <label for="item_is_active" class="col-sm-4 col-form-label">販売ステータス</label>
          <div class="col-sm-8">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", {value: :true, style: "display: inline-block;"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>

      <% end %>

    </div>
  </div>
</div>